<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	<beans profile="hbase">

		<!-- hbase ConnectionFactory -->
		<bean id="hbaseConfigurationFactory"
			class="org.springframework.data.hadoop.hbase.HbaseConfigurationFactoryBean">
			<property name="properties">
				<map>
					<entry key="hbase.zookeeper.quorum" value="192.168.1.91" />
					<entry key="property.clientPort" value="2181" />
				</map>
			</property>
		</bean>
	</beans>

</beans>